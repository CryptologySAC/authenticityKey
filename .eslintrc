{
  "env": {
    "es6": true,
    "node": true,
    "jest": true
  },
  "extends": [
    "standard"
  ],
  // required to lint *.vue files
  plugins: [
    'html'
  ],
  "parserOptions": {
    "sourceType": "module"
  },
  "rules": {
    "no-console": "off",
    "indent": ["off", 2],
    "linebreak-style": 0,
    "quotes": ["error", "single"],
    "semi": ["off", "always"]
  }
}
